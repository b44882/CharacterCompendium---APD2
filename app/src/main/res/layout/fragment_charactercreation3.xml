<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdbd6bd"
    android:weightSum="1"
    android:id="@+id/cc3_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/page3_status"
        android:weightSum="1"
        android:background="#fffaf5dc"
        android:layout_margin="5dp"
        android:padding="2dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stat + Stat Roller"
            android:id="@+id/textView"
            android:textSize="@dimen/highlight"
            android:textIsSelectable="false"
            android:padding="0dp"
            android:password="false"
            android:typeface="serif"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manually enter numbers below"
            android:id="@+id/textView6"
            android:textSize="@dimen/subtext"
            android:textIsSelectable="false"
            android:padding="1dp"
            android:password="false"
            android:typeface="serif"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:weightSum="1"
        android:padding="0dp"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cc3_statDiceView1"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="0.17">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:id="@+id/imageView"
                android:src="@drawable/d6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/cc3_statDiceText1"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/highlight" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cc3_statDiceView2"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="0.17">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:id="@+id/imageView5"
                android:src="@drawable/d6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/cc3_statDiceText2"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/highlight" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cc3_statDiceView3"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="0.17">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:id="@+id/imageView6"
                android:src="@drawable/d6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/cc3_statDiceText3"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/highlight" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cc3_statDiceView4"
            android:weightSum="1"
            android:background="#ffa19c88"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="0.17">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:id="@+id/imageView7"
                android:src="@drawable/d6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/cc3_statDiceText4"
                android:typeface="serif"
                android:textSize="@dimen/highlight"
                android:textColor="#ff636866"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout9"
        android:weightSum="1"
        android:padding="0dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_weight="0.33">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:id="@+id/cc3_sumrollview"
            android:layout_gravity="center"
            android:gravity="center|left">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="101dp"
                android:layout_height="103dp"
                android:id="@+id/linearLayout11"
                android:weightSum="1"
                android:background="#fffaf5dc"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:id="@+id/cc3_statRollTotal"
                    android:textSize="20dp"
                    android:textIsSelectable="false"
                    android:padding="1dp"
                    android:password="false"
                    android:typeface="serif"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:id="@+id/linearLayout"
            android:gravity="center|right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll"
                android:id="@+id/cc3_statDiceRollButton"
                android:background="#fffaf5dc"
                android:textStyle="bold"
                android:typeface="serif"
                android:padding="5dp"
                android:singleLine="true"
                android:layout_weight="0.06"
                android:layout_margin="5dp"
                android:textSize="@dimen/subtext" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:id="@+id/linearLayout12"
        android:weightSum="1"
        android:padding="0dp"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout14"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="3dp"
            android:gravity="center|center_vertical"
            android:layout_weight="0.27" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none|number"
                android:ems="10"
                android:id="@+id/cc3_strEdit"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/activity_horizontal_margin"
                android:digits="0123456789"
                android:editable="false"
                android:maxLength="3"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STR"
                android:id="@+id/textView12"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/subtext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-5)"
                android:id="@+id/cc3_strMod"
                android:textSize="@dimen/subtext" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout15"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="3dp"
            android:gravity="center|center_vertical"
            android:layout_weight="0.27" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none|number"
                android:ems="10"
                android:id="@+id/cc3_dexEdit"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/activity_horizontal_margin"
                android:digits="0123456789"
                android:editable="false"
                android:maxLength="3"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEX"
                android:id="@+id/textView15"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/subtext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-5)"
                android:id="@+id/cc3_dexMod"
                android:textSize="@dimen/subtext" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout6"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="3dp"
            android:gravity="center|center_vertical"
            android:layout_weight="0.27" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none|number"
                android:ems="10"
                android:id="@+id/cc3_conEdit"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/activity_horizontal_margin"
                android:digits="0123456789"
                android:editable="false"
                android:maxLength="3"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CON"
                android:id="@+id/textView7"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/subtext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-5)"
                android:id="@+id/cc3_conMod"
                android:textSize="@dimen/subtext" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:id="@+id/linearLayout17"
        android:weightSum="1"
        android:padding="0dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout10"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="3dp"
            android:gravity="center|center_vertical"
            android:layout_weight="0.27" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none|number"
                android:ems="10"
                android:id="@+id/cc3_intEdit"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/activity_horizontal_margin"
                android:digits="0123456789"
                android:editable="false"
                android:maxLength="3"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INT"
                android:id="@+id/textView3"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/subtext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-5)"
                android:id="@+id/cc3_intMod"
                android:textSize="@dimen/subtext" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout13"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="3dp"
            android:gravity="center|center_vertical"
            android:layout_weight="0.27" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none|number"
                android:ems="10"
                android:id="@+id/cc3_wisEdit"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/activity_horizontal_margin"
                android:digits="0123456789"
                android:editable="false"
                android:maxLength="3"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIS"
                android:id="@+id/textView17"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/subtext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-5)"
                android:id="@+id/cc3_wisMod"
                android:textSize="@dimen/subtext" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout16"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="3dp"
            android:gravity="center|center_vertical"
            android:layout_weight="0.27" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none|number"
                android:ems="10"
                android:id="@+id/cc3_chaEdit"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/activity_horizontal_margin"
                android:digits="0123456789"
                android:editable="false"
                android:maxLength="3"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHA"
                android:id="@+id/textView19"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="@dimen/subtext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-5)"
                android:id="@+id/cc3_chaMod"
                android:textSize="@dimen/subtext" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:weightSum="1"
        android:padding="0dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:id="@+id/linearLayout20"
            android:layout_gravity="center"
            android:gravity="center|left" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:id="@+id/cc3_prev"
                android:background="#fffaf5dc"
                android:textStyle="bold"
                android:typeface="serif"
                android:padding="5dp"
                android:singleLine="true"
                android:layout_weight="0.06"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:id="@+id/linearLayout21"
            android:gravity="center|right" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next >"
                android:id="@+id/cc3_next"
                android:background="#fffaf5dc"
                android:textStyle="bold"
                android:typeface="serif"
                android:padding="5dp"
                android:singleLine="true"
                android:layout_weight="0.06"
                android:layout_margin="5dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/linearLayout18"
        android:weightSum="1"
        android:baselineAligned="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="#fffff638" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advertisement"
            android:id="@+id/textView4"
            android:textSize="@dimen/highlight"
            android:textIsSelectable="false"
            android:padding="1dp"
            android:password="false"
            android:typeface="serif"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>