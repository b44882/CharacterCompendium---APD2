<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdbd6bd"
    android:weightSum="1"
    android:id="@+id/hpmanage_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hpmanage_status"
        android:weightSum="1"
        android:background="#fffaf5dc"
        android:layout_margin="5dp"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP Management"
            android:id="@+id/textView"
            android:textSize="@dimen/highlight"
            android:textIsSelectable="false"
            android:padding="1dp"
            android:password="false"
            android:typeface="serif"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Maximum, Current, and Temp HP."
            android:id="@+id/textView6"
            android:textSize="@dimen/subtext"
            android:textIsSelectable="false"
            android:padding="1dp"
            android:password="false"
            android:typeface="serif"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="97dp"
        android:id="@+id/hpmanage_diceholder"
        android:gravity="center"
        android:layout_weight="0.12">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:weightSum="1"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/hp_rollDiceView"
                android:weightSum="1"
                android:background="#fffaf5dc"
                android:padding="2dp"
                android:focusable="false"
                android:layout_margin="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="41dp"
                    android:id="@+id/hp_diceImage"
                    android:src="@drawable/d6"
                    android:layout_weight="0.24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/hp_rollDiceText"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textSize="@dimen/highlight" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".4"
            android:id="@+id/divider"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout3"
                android:weightSum="1"
                android:padding="0dp"
                android:layout_weight="0.07"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll"
                    android:id="@+id/hp_rollButton"
                    android:background="#fffaf5dc"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:layout_weight="0.06"
                    android:layout_margin="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:weightSum="1"
        android:padding="0dp"
        android:gravity="center" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout14"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:gravity="center|center_vertical"
            android:layout_weight=".335" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/hp_currentHpEditText"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/highlight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Current HP"
                android:id="@+id/textView12"
                android:typeface="serif"
                android:textSize="@dimen/subtext"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout15"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:gravity="center|center_vertical"
            android:layout_weight=".335" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/hp_maxHpEditText"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/highlight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Max HP"
                android:id="@+id/textView15"
                android:typeface="serif"
                android:textSize="@dimen/subtext"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout6"
            android:weightSum="1"
            android:background="#fffaf5dc"
            android:padding="2dp"
            android:focusable="false"
            android:layout_margin="5dp"
            android:gravity="center|center_vertical"
            android:layout_weight=".335" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/hp_tempHpEditText"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="@dimen/highlight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Temp HP"
                android:id="@+id/textView7"
                android:typeface="serif"
                android:textSize="@dimen/subtext"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:weightSum="1"
        android:background="#fffaf5dc"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.06"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:id="@+id/textView3"
            android:textSize="@dimen/highlight"
            android:textIsSelectable="false"
            android:padding="1dp"
            android:password="false"
            android:typeface="serif"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hp_notesEditText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/linearLayout9"
        android:weightSum="1"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest (Reset)"
            android:id="@+id/hp_restButton"
            android:background="#fffaf5dc"
            android:textStyle="bold"
            android:typeface="serif"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/hp_closeButton"
            android:background="#fffaf5dc"
            android:textStyle="bold"
            android:typeface="serif"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:baselineAligned="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="#fffff638" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advertisement"
            android:id="@+id/textView4"
            android:textSize="@dimen/highlight"
            android:textIsSelectable="false"
            android:padding="1dp"
            android:password="false"
            android:typeface="serif"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>